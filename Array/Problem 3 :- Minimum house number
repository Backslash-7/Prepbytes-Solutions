#include <bits/stdc++.h>
  using namespace std;
  
  int main()
  {
    //write your code here
    int t;
    cin>>t;
    while(t--)
    {
      int n,res=0;
      cin>>n;
      int arr[n];
      for(int i = 0; i<n; i++)
      {
        cin>>arr[i];
      }
      int min = arr[0];
      for(int i=0;i<n;i++)
      {
        if(arr[i]<min)
        {
          min=arr[i];
          res = i;
        }
      }
      cout<<res<<endl;
    }
    
    
    return 0;
  }
