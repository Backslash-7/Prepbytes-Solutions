#include <bits/stdc++.h>
  using namespace std;
  
  int main()
  {
    //write your code here
    int n,toy_present,max_capacity,count = 0;
    cin>>n;
    for(int i = 0; i<n;i++)
    {
      cin>>toy_present>>max_capacity;
      if((max_capacity - toy_present)>=2)
      {
        count++;
      }
    }
    cout<<count;
    
    return 0;
  }
