#include <bits/stdc++.h>
using namespace std;
  
int main()
{
    int n,quantity,price;
    float cost;
    cin>>n;
    while(n--)
    {
      cin>>quantity>>price;
      float discount=20;
      if(quantity>100)
      {
         cost = quantity*price - quantity*price * 0.2;
      }
      else
      {
        cost = quantity*price;
      }
      cout<< fixed <<setprecision(1)<<cost<<endl;
    }
    
    return 0;
}
