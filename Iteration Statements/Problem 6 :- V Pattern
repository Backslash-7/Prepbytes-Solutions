#include <bits/stdc++.h>
using namespace std;
  
  int main()
  {
    char ch;
    cin>>ch;
    for(int i=1;i<=5;i++)
    {
      for(int j = 1; j<=i; j++)
      {
        cout<<j;
      }
      for(int k = 1; k<=5-i; k++)
      {
        cout<<"  ";
      }
      for(int k = 1; k<=5-i; k++)
      {
        cout<<"  ";
      }
      for(int j = i; j>0; j--)
      {
        cout<<j;
      }
      cout<<endl;
    }
    
    return 0;
  }
